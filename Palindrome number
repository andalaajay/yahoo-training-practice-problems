class Solution {
    public boolean isPalindrome(int x) {
        int value=x,sum=0;
        if(x>=0){
        while(x!=0)
        {
            int rem=x%10;
            sum=sum*10+rem;
            x=x/10;
        }
        }
        else
        return false;
        if(sum==value)
        return true;
        else
        return false;
    }
}
